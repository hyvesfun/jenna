<Window x:Class="Jenna.Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shape Game" Height="688" Width="619" FontStyle="Italic"
        Loaded="Window_Loaded" Closed="Window_Closed" Closing="Window_Closing"
        WindowStyle="None"
        WindowState="Maximized">
    <Grid>
        <Canvas Margin="12" Name="playfield" SizeChanged="Playfield_SizeChanged">
            <Canvas.Background>
                <ImageBrush ImageSource="background.jpeg"></ImageBrush>
            </Canvas.Background>
        </Canvas>
        <Image Name="video" Opacity="1" Margin="0,18,19,0" HorizontalAlignment="Right" Width="160" Height="120" VerticalAlignment="Top" />
    </Grid>
</Window>
